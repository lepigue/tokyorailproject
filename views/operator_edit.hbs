<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Edit Operator</title>
  <link rel="icon" href="../public/favicon.ico" type="image/x-icon">
</head>

<body>
  <main>

  {{!-- Create Operator Form --}}
    <h1>Create Operator</h1>
    <form id="addOperatorForm" method="POST" action="/addOperatorForm">
      <label for="firstName">First Name:</label><br>
      <input type="text" id="firstName" name="firstName"><br>
      
      <label for="lastName">Last Name:</label><br>
      <input type="text" id="lastName" name="lastName"><br>
      
      <label for="phoneNumber">Phone Number:</label><br>
      <input type="text" id="phoneNumber" name="phoneNumber"><br>
      
      <label for="email">E-mail Address:</label><br>
      <input type="text" id="email" name="email"><br>
      <br>
      
      <input class="editButton" type="submit">
    </form>
    <br>
    <hr>

  {{!-- Update Operator Form --}}
    <h1>Edit Operator</h1>
    <form id="updateOpForm">
      <label for="selectName"></label>
        <select name="selectName" id="selectName">
          <option value="test">Select Operator</option>
          {{#each data}}
          <option value="{{this.operator_ID}}" id="{{this.operator_ID}}">{{this.first_name}} {{this.last_name}}</option>
          {{/each}}
        </select>
      <br>
      <br>
      <label for="firstName">First Name:</label><br>
      <input type="text" id="update-firstName" name="update-firstName"><br>
      
      <label for="lastName">Last Name:</label><br>
      <input type="text" id="update-lastName" name="update-lastName"><br>
      
      <label for="phoneNumber">Phone Number:</label><br>
      <input type="text" id="update-phoneNumber" name="update-phoneNumber"><br>
      
      <label for="email">E-mail Address:</label><br>
      <input type="text" id="update-email" name="update-email"><br>
      <br>

      <input class="editButton" type="submit">
    </form>
    <script src="./js/update_operator.js"></script>
    <br>
    <hr>

    {{!-- Delete Operator Form --}}
    <h1>Delete Operator</h1>
    <form id="delete_form">
       <select name="input_operator" id="input_operator">
        <option data-value={{this.operator_ID}}>Select</option>
        {{#each data}}
        <option value={{this.operator_ID}}">{{this.first_name}} {{this.last_name}}</option>
        {{/each}}
    </select>
    <input type="submit" value="submit">
    </form>
    <script src="./js/delete_operator.js"></script>
    <br>
    <hr>

{{!-- The Data from our Database --}}
{{!-- Create a table --}}
<table id="operator_table" class="table-style" >

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{!-- For each row, print the operator_ID, first_name, last_name, phone_number, email in order --}}
        {{#each data}}
        <tr data-value={{this.operator_ID}}>
            <td>{{this.operator_ID}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.phone_number}}</td>
            <td>{{this.email}}</td>
            <td><button onclick="deleteOperator({{this.operator_ID}})">Delete</button></td>
            <td><button onclick="updateOperator({{this.operator_ID}})">Update</button></td>
        </tr>
        {{/each}}
    </tbody>
    <script src="./js/delete_operator.js"></script>
</table>
  </main>
  <br>
  <hr>
  <footer>
    <a href="/index" id="footer">Back to home</a>
  </footer>
</body>
</html>