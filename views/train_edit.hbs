      {{!-- Just some plain text --}}
{{!-- The Data from our Database --}}
{{!-- Create a table --}}
<table class = "table-style">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the train_ID, model, last_service_date, line_code, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.train_ID}}</td>
            <td>{{this.model}}</td>
            <td>{{this.last_service_date}}</td>
            <td>{{this.line_code}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>



