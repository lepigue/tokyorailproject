<body>
  <main>
    <h1>Select a Lines & Stations Relationship</h1>
    <div class="dropdown">
      <button class="dropbtn">Lines & Stations Relationships</button>
      <div class="dropdown-content">
        <a href="/relationship_template?id="1">1</a>
        <a href="/relationship_template?id="2">2</a>
        <a href="/relationship_template?id="3">3</a>
      </div>
    </div>

<h2>Add a Lines & Stations Relationship:</h2>
<div id="addRelationship style="display: block">
    <form id="addRelationship">
        <label> Station Name:</label> <select name="stationFK">
            	<option value="0">&nbsp;</option>
                <option value="1">Station1</option>
                <option value="2">Station2</option>
                <option value="3">Station4</option>
                <option value="4">Station5</option>
                <option value="5">Station6</option>
                <option value="6">Station7</option>
                </select>  </br>
        <label> Line Name: </label> <select name="lineFK">
            	<option value="0">&nbsp;</option>
                <option value="1">Ginza</option>
                <option value="2">Marunouchi</option>
                <option value="3">Hibiya</option>
                <option value="4">Tozai</option>
                <option value="5">Chiyoda</option>
                <option value="6">Yurakucho</option>
                <option value="4">Hanzoman</option>
                <option value="5">Namboku</option>
                <option value="6">Fukutoshin</option>
                </select>
        <input class="btn" type="submit" id="addRelationship" value="Add Relationship">
    </form>
</div>

<h2>Update Stations & Lines Relationship</h2>
<div id="updateRelationship" style="display: block">
  <form id="updateRelationship">
      <legend>Update Relationship</legend>
            <label> Station Name: </label> <input type="text" name="stationName">
            <label> Line Name: </label> <input type="text"  name="lineName">
    <input class="btn" type="submit" id="updateRelationship" value="Update Relationship">
  </form> 
</div>
    
<h2>Delete Stations & Lines Relationship</h2>
<div id="deleteRelationship" style="display: block">
    <form id= "deleteRelationship">
    <label>Station Name:</label> <select name="lineFK">
            	<option value="0">&nbsp;</option>
                <option value="1">Station1</option>
                <option value="2">Station2</option>
                <option value="3">Station4</option>
                <option value="4">Station5</option>
                <option value="5">Station6</option>
                <option value="6">Station7</option>
                </select>
    <label> Line Name: </label><select name="lineFK">
            	<option value="0">&nbsp;</option>
                <option value="1">Ginza</option>
                <option value="2">Marunouchi</option>
                <option value="3">Hibiya</option>
                <option value="4">Tozai</option>
                <option value="5">Chiyoda</option>
                <option value="6">Yurakucho</option>
                <option value="4">Hanzoman</option>
                <option value="5">Namboku</option>
                <option value="6">Fukutoshin</option>
                </select>
    <input class="btn" type="submit" id="deleteRelationship" value="Delete Relationship">
    </form>
</div>
